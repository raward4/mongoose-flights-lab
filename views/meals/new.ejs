<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/public/stylesheets/meals/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %> </h1>
  <p>
    Please ensure that your choosen meal doesn't already exist
    <select>
      <% meals.forEach(meal => { %>
        <option><%= meal.name %></option> 
        <% }) %> 
    </select>
  </p>
  <form id="add-meal-form" action="/meals" method="post">
    <label for="meal-input">Meal:</label>
    <input type="text" name="meal" id="meal-input">
    <button type="submit">Add Meal</button>
  </form>
</main>

<%- include('../partials/footer') %>